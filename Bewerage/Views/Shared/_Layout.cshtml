                <ui class="nav navbar-nav">
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </ui>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <a target="_blank" href="https://github.com/gbeydtha"> &copy; 2020 - git beydtha</a>
